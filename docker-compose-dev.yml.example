version: '2'

services:
  postgres:
    image: postgres:13.4
    ports:
      - "5432:5432"
    environment:
      - POSTGRES_USER=project
      - POSTGRES_PASSWORD=project
      - POSTGRES_DB=project
    volumes:
      - /home/${USER}/data/project/postgres:/var/lib/postgresql/data

  redis:
    image: redis:6.2.5-alpine3.14
    volumes:
      - /home/${USER}/data/project/redis:/data
    ports:
      - "6379:6379"

  memcached:
    image: memcached:1.6.10-alpine
    ports:
      - "11211:11211"
